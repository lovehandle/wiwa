%h1 Listing dreams

%table
  %tr
    %th Name
    %th Description
    %th Visible
    %th Age
    %th Location
    %th
    %th
    %th

  - @dreams.each do |dream|
    %tr
      %td= dream.name
      %td= dream.description
      %td= dream.visible
      %td= dream.age
      %td= dream.location
      %td= link_to 'Show', dream
      %td= link_to 'Edit', edit_dream_path(dream)
      %td= link_to 'Destroy', dream, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Dream', new_dream_path
