= form_for @dream_submission do |f|
  -if @dream_submission.errors.any?
    #error_explanation
      %h2= "#{pluralize(@dream_submission.errors.count, "error")} prohibited this dream_submission from being saved:"
      %ul
        - @dream_submission.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :country
    = f.text_field :country
  .field
    = f.label :dream
    = f.text_area :dream
  .field
    = f.label :age
    = f.number_field :age
  .field
    = f.label :email
    = f.text_field :email
  .actions
    = f.submit 'Save'
